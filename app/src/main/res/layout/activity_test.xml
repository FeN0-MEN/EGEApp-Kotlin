<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <ImageView
        android:id="@+id/imageBox"
        android:layout_width="380dp"
        android:layout_height="212dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="237dp" />

    <EditText
        android:id="@+id/AnswerEditText"
        android:layout_width="236dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Ответ"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="458dp" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:text="Перейти к предыдущему заданию"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="506dp" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:onClick="onClickNext"
        android:text="Перейти к следующему заданию"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="506dp" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="236dp"
        android:layout_height="50dp"
        android:onClick="onClickExit"
        android:text="Выйти"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="639dp" />

    <Button
        android:id="@+id/buttonDownload"
        android:layout_width="236dp"
        android:layout_height="50dp"
        android:text="Скачать файл"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="575dp" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="399dp"
        android:layout_height="228dp"
        tools:layout_editor_absoluteX="6dp">

        <TextView
            android:id="@+id/TextTask"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="7dp"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="right"
            app:layout_constraintBottom_toTopOf="@+id/imageBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>