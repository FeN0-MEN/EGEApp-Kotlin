<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAE0"
    android:backgroundTint="#FEFAE0"
    tools:context=".RegActivity">

    <EditText
        android:id="@+id/Name"
        android:layout_width="171dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#BC6C25"
        android:drawableTint="#BC6C25"
        android:ems="10"
        android:fontFamily="@font/droid_sans"
        android:hint="Имя"
        android:inputType="textEmailAddress"
        android:lineSpacingExtra="16sp"
        android:singleLine="true"
        android:textColor="#606C38"
        android:textColorHint="#606C38"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/background"
        android:layout_width="171dp"
        android:layout_height="38dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="#BC6C25"
        android:drawableTint="#BC6C25"
        android:ems="10"
        android:fontFamily="@font/droid_sans"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:lineSpacingExtra="16sp"
        android:singleLine="true"
        android:textColor="#606C38"
        android:textColorHint="#606C38"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/passwordEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="171dp"
        android:layout_height="38dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#BC6C25"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColor="#606C38"
        android:textColorHint="#606C38"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/passwordEditText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background" />

    <EditText
        android:id="@+id/passwordEditText2"
        android:layout_width="171dp"
        android:layout_height="38dp"
        android:layout_marginBottom="39dp"
        android:backgroundTint="#BC6C25"
        android:ems="10"
        android:hint="Ещё раз пароль"
        android:inputType="textPassword"
        android:textColor="#606C38"
        android:textColorHint="#606C38"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/RegButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

    <Button
        android:id="@+id/RegButton"
        android:layout_width="171dp"
        android:layout_height="53dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#F7F4E0"
        android:fontFamily="@font/droid_sans"
        android:onClick="registerUser"
        android:shadowColor="#000000"
        android:shadowDx="12"
        android:shadowDy="12"
        android:shadowRadius="0"
        android:text="Сохранить"
        android:textAllCaps="false"
        android:textColor="#606C38"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="90sp"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText2"
        app:strokeColor="#BC6C25"
        app:strokeWidth="3sp" />

    <Button
        android:id="@+id/back"
        android:layout_width="171dp"
        android:layout_height="53dp"
        android:layout_marginBottom="107dp"
        android:backgroundTint="#F7F4E0"
        android:fontFamily="@font/droid_sans"
        android:onClick="registerUser"
        android:text="Назад"
        android:textAllCaps="false"
        android:textColor="#606C38"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="90sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegButton"
        app:strokeColor="#BC6C25"
        app:strokeWidth="3sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="346dp"
        android:layout_height="114dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="58dp"
        app:layout_constraintBottom_toTopOf="@+id/Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotype__2_" />

</androidx.constraintlayout.widget.ConstraintLayout>